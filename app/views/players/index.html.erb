<h2>Team Stats</h2>
<table class="stats">
	
	<thead>
		<tr>
			<th>Batting</th>
			<th>AB</th>
			<th>Hits</th>
			<th>Runs</th>
			<th>2B</th>
			<th>3B</th>
			<th>HR</th>
			<th>RBI</th>
			<th>SB</th>
			<th>CS</th>
			<th>BB</th>
			<th>IBB</th>
			<th>HB</th>
			<th>AVG</th>
			<th>OBP</th>
		</tr>
	</thead>

	<tbody class="players">
			<% @batter_stats.each do |bs| %>
				<tr class="player">
					<td><%= link_to(bs.fname + ' ' + bs.lname, player_path(bs.player_id)) %></td>
					<td><%= bs.sum_ab %></td>
					<td><%= bs.sum_hits %></td>
					<td><%= bs.sum_runs %></td>
					<td><%= bs.sum_double %></td>
					<td><%= bs.sum_triple %></td>
					<td><%= bs.sum_hr %></td>
					<td><%= bs.sum_rbi %></td>
					<td><%= bs.sum_sb %></td>
					<td><%= bs.sum_cs %></td>
					<td><%= bs.sum_bb %></td>
					<td><%= bs.sum_ibb %></td>
					<td><%= bs.sum_hb %></td>
					<td><%= number_with_precision(((bs.sum_hits.to_d / bs.sum_ab.to_d).to_d), :precision => 3).to_s.sub("0", "") %></td>
					<td><%= number_with_precision((((bs.sum_hits + bs.sum_bb).to_d / bs.sum_ab.to_d).to_d), :precision => 3).to_s.sub("0", "") %></td>
				</tr>
			<% end %>
	</tbody>

</table>
<table class="stats">

	<thead>
		<tr>
			<th class="first_col">Pitching</th>
			<th>Starts</th>
			<th>Wins</th>
			<th>Losses</th>
			<th>Saves</th>
			<th>CG</th>
			<th>SHO</th>
			<th>IP</th>
			<th>Hits</th>
			<th>Runs</th>
			<th>ER</th>
			<th>HR</th>
			<th>HB</th>
			<th>BB</th>
			<th>IBB</th>
			<th>SO</th>
			<th>ERA</th>
			<th>WHIP</th>
		</tr>
	</thead>

	<tbody class="players">
		<% @pitcher_stats.each do |ps| %>
				<tr class="player">
					<td><%= link_to(ps.fname + ' ' + ps.lname, player_path(ps.player_id)) %></td>
					<td><%= ps.sum_start %></td>
					<td><%= ps.sum_win %></td>
					<td><%= ps.sum_loss %></td>
					<td><%= ps.sum_sv %></td>
					<td><%= ps.sum_cg %></td>
					<td><%= ps.sum_sho %></td>
					<td><%= ps.sum_ip %></td>
					<td><%= ps.sum_hits %></td>
					<td><%= ps.sum_runs %></td>
					<td><%= ps.sum_er %></td>
					<td><%= ps.sum_hr %></td>
					<td><%= ps.sum_hb %></td>
					<td><%= ps.sum_bb %></td>
					<td><%= ps.sum_ibb %></td>
					<td><%= ps.sum_so %></td>
					<td><%= number_with_precision((((ps.sum_er.to_d / ps.sum_ip.to_d) * 9).to_d), :precision => 2) %></td>
					<td><%= number_with_precision((((ps.sum_bb + ps.sum_hits).to_d / ps.sum_ip.to_d).to_d), :precision => 2) %></td>
				</tr>
			<% end %>

	</tbody>
</table>