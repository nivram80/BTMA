<h2>Team Stats</h2>
<table class="stats">
	
	<thead>
		<tr>
			<th>Batting</th>
			<th>AB</th>
			<th>Hits</th>
			<th>Runs</th>
			<th>2B</th>
			<th>3B</th>
			<th>HR</th>
			<th>RBI</th>
			<th>SB</th>
			<th>CS</th>
			<th>BB</th>
			<th>IBB</th>
			<th>HB</th>
			<th>AVG</th>
			<th>OBP</th>
		</tr>
	</thead>

	<tbody class="players">
			<% @players.each do |p| %>
				<tr class="player">
					<td><%= link_to(p.fullname, player_path(p.id)) %></td>
					<% bs = BatterGameStat.where(:player_id => p.id) %>
					<td><%= bs.sum(:ab) %></td>
					<td><%= bs.sum(:hits) %></td>
					<td><%= bs.sum(:runs) %></td>
					<td><%= bs.sum(:double) %></td>
					<td><%= bs.sum(:triple) %></td>
					<td><%= bs.sum(:hr) %></td>
					<td><%= bs.sum(:rbi) %></td>
					<td><%= bs.sum(:sb) %></td>
					<td><%= bs.sum(:cs) %></td>
					<td><%= bs.sum(:bb) %></td>
					<td><%= bs.sum(:ibb) %></td>
					<td><%= bs.sum(:hb) %></td>
					<td><%= number_with_precision(((bs.sum(:hits).to_d/bs.sum(:ab).to_d).to_d), :precision => 3).to_s.sub("0", "") %></td>
					<td><%= number_with_precision((((bs.sum(:hits) + bs.sum(:bb)).to_d / bs.sum(:ab).to_d).to_d), :precision => 3).to_s.sub("0", "") %></td>
				</tr>
			<% end %>
	</tbody>

</table>
<table class="stats">

	<thead>
		<tr>
			<th class="first_col">Pitching</th>
			<th>Starts</th>
			<th>Wins</th>
			<th>Losses</th>
			<th>Saves</th>
			<th>CG</th>
			<th>SHO</th>
			<th>IP</th>
			<th>Hits</th>
			<th>Runs</th>
			<th>ER</th>
			<th>HR</th>
			<th>HB</th>
			<th>BB</th>
			<th>IBB</th>
			<th>SO</th>
			<th>ERA</th>
			<th>WHIP</th>
		</tr>
	</thead>

	<tbody class="players">
		<% @players.each do |p| %>
				<tr class="player">
					<td><%= link_to(p.fullname, player_path(p.id)) %></td>
					<% bs = PitcherGameStat.where(:player_id => p.id) %>
					<td><%= bs.sum(:start) %></td>
					<td><%= bs.sum(:win) %></td>
					<td><%= bs.sum(:loss) %></td>
					<td><%= bs.sum(:sv) %></td>
					<td><%= bs.sum(:cg) %></td>
					<td><%= bs.sum(:sho) %></td>
					<td><%= bs.sum(:ip) %></td>
					<td><%= bs.sum(:hits) %></td>
					<td><%= bs.sum(:runs) %></td>
					<td><%= bs.sum(:er) %></td>
					<td><%= bs.sum(:hr) %></td>
					<td><%= bs.sum(:hb) %></td>
					<td><%= bs.sum(:bb) %></td>
					<td><%= bs.sum(:ibb) %></td>
					<td><%= bs.sum(:so) %></td>
					<td><%= number_with_precision((((bs.sum(:er).to_d / bs.sum(:ip).to_d) * 9).to_d), :precision => 2) %></td>
					<td><%= number_with_precision((((bs.sum(:bb) + bs.sum(:hits)).to_d / bs.sum(:ip).to_d).to_d), :precision => 2) %></td>
				</tr>
			<% end %>

	</tbody>
</table>