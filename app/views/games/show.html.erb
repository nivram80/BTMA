		<tr>
			<th>#</th>
			<th>Position Player</th>
			<th>Position</th>
			<th>AB</th>
			<th>Hits</th>
			<th>Runs</th>
			<th>2B</th>
			<th>3B</th>
			<th>HR</th>
			<th>RBI</th>
			<th>HB</th>
			<th>BB</th>
			<th>IBB</th>
			<th>SO</th>
			<th>SB</th>
			<th>CS</th>
		</tr>
	</thead>
	<tbody>
		<% order = 1 %>
		<% while order < 10 %>
			<tr class="batter<%= order %>">
				<td><%= order %></td>
				<td><%= link_to("Add Player", :new_batter_game_stat)  %></td>
				<td></td>
				<td></td>
				<td></td>
				<td></td>
				<td></td>
				<td></td>
				<td></td>
				<td></td>
				<td></td>
				<td></td>
				<td></td>
				<td></td>
				<td></td>
				<td></td>
				<% order += 1 %>
			</tr>
		<% end %>
	</tbody>
</table>
<table>
	<thead>
		<tr>
			<th>Pitcher(s)</th>
			<th>Start</th>
			<th>Win</th>
