<h2>Game vs. <%= @game.opp_nickname %></h2>
<p><%= @game.game_datetime.strftime("%B %e, %Y - %I:%M %p") %></p>

<table class="stats">
	<thead>
		<tr>
			<th>#</th>
			<th>Position Player</th>
			<th>Position</th>
			<th>AB</th>
			<th>Hits</th>
			<th>Runs</th>
			<th>2B</th>
			<th>3B</th>
			<th>HR</th>
			<th>RBI</th>
			<th>HB</th>
			<th>BB</th>
			<th>IBB</th>
			<th>SO</th>
			<th>SB</th>
			<th>CS</th>
		</tr>
	</thead>
	<tbody class="players">
		<% @lineup.each do |bs|%>
			<% if bs.is_a?(Integer) %>
				<tr>
					<td><%= bs + 1 %></td>
					<td class="add_player"><%= link_to("Add Player", :new_batter_game_stat, :remote => true)  %></td>
				</tr>	
			<% else %>
				<tr>
					<td><%= bs.order_in_lineup %></td>
					<td><%= bs.player.fullname %></td>
					<td></td>
					<td><%= bs.ab %></td>
					<td><%= bs.hits %></td>
					<td><%= bs.runs %></td>
					<td><%= bs.double %></td>
					<td><%= bs.triple %></td>
					<td><%= bs.hr %></td>
					<td><%= bs.rbi %></td>
					<td><%= bs.hb %></td>
					<td><%= bs.bb %></td>
					<td><%= bs.ibb %></td>
					<td><%= bs.so %></td>
					<td><%= bs.sb %></td>
					<td><%= bs.cs %></td>
				</tr>
			<% end %>
		<% end %>
	</tbody>
</table>
<table class="stats">
	<thead>
		<tr>
			<th>#</th>
			<th>Pitcher(s)</th>
			<th>Start</th>
			<th>Win</th>
			<th>Loss</th>
			<th>Save</th>
			<th>CG</th>
			<th>SHO</th>
			<th>IP</th>
			<th>Hits</th>
			<th>Runs</th>
			<th>ER</th>
			<th>HR</th>
			<th>HB</th>
			<th>BB</th>
			<th>IBB</th>
			<th>SO</th>
		</tr>
	</thead>
	<tbody class="set_pitchers">
		
		<% @pitcher_stats.each do |ps| %>
		<tr class="set_pitcher">
			<td><%= ps.pitcher_num %></td>
			<td><%= ps.player.fullname %></td>
			<td><%= ps.start %></td>
			<td><%= ps.win %></td>
			<td><%= ps.loss %></td>
			<td><%= ps.sv %></td>
			<td><%= ps.cg %></td>
			<td><%= ps.sho %></td>
			<td><%= ps.ip %></td>
			<td><%= ps.hits %></td>
			<td><%= ps.runs %></td>
			<td><%= ps.er %></td>
			<td><%= ps.hr %></td>
			<td><%= ps.hb %></td>
			<td><%= ps.bb %></td>
			<td><%= ps.ibb %></td>
			<td><%= ps.so %></td>
		</tr>
		<% end %>
		
	</tbody>
	<tbody class="add_pitchers">
		<td class="add_pitcher">
		</td>
	</tbody>
</table>
<%= link_to("Add Pitcher", :new_pitcher_game_stat, :remote => true, class: "add_pitcher_link")  %>