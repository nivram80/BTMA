<table class="stats home left">
	<thead>
		<tr class="sections">
			<th>Coaches</th>
		</tr>
		<tr>
			<th>Coach</th>
			<th>Manager</th>
			<th>1B</th>
			<th>3B</th>
		</tr>
	</thead>
	<tbody class="coaches">
			<% @coaches.each do |c| %>
				<tr class="coach">
					<td><%= c.fullname %></td>
					<td><%= "X" if c.manager %></td>
					<td><%= "X" if c.first_base %></td>
					<td><%= "X" if c.third_base %></td>
				</tr>
			<% end %>
	</tbody>
</table>
<%= link_to "Add Coach", :new_coach, :class => "content_button left" %>
