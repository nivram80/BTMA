<table>
	<thead>
		<tr>
			<th>Roster</th>
			<th>Batting</th>
			<th>Pitching</th>
		</tr>
		<tr>
			<th>Player</th>
			<th>Positions</th>
			<th>Bat/Throws</th>
			<th>AVG</th>
			<th>HR</th>
			<th>RBI</th>
			<th>SB</th>
			<th>ERA</th>
			<th>W</th>
			<th>L</th>
			<th>SO</th>
		</tr>
	</thead>
	<tbody class="players">
			<% @players.each do |p| %>
				<tr class="player">
					<td><%= p.fullname %></td>
					<td><%#= p.positions %></td>
					<td><%= p.bats %>/<%= p.throws %></td>
				</tr>
			<% end %>
	</tbody>
</table>

<table>
	<thead>
		<tr>
			<th>Coaches</th>
		</tr>
		<tr>
			<th>Coach</th>
			<th>Manager</th>
			<th>First Base</th>
			<th>Third Base</th>
		</tr>
	</thead>
	<tbody class="coaches">
			<% @coaches.each do |c| %>
				<tr class="coach">
					<td><%= c.fullname %></td>
					<td><%= c.manager %></td>
					<td><%= c.first_base %></td>
					<td><%= c.third_base %></td>
				</tr>
			<% end %>
	</tbody>
</table>
