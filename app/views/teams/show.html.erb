<div class="home left">
	<h2>Roster</h2>
	<table class="stats">

		<thead>
			<tr>
				<th>Player</th>
				<th>Position(s)</th>
				<th>Bats</th>
				<th>Throws</th>
			</tr>
		</thead>

		<tbody class="players">
			<% @position_players.each do |pp| %>
				<tr class="player">
					<td><%= link_to(pp.fname + ' ' + pp.lname, player_path(pp.player_id)) %></td>
					<td><%= pp.position.position %></td>
					<td><%= pp.bats %></td>
					<td><%= pp.throws %></td>
				</tr>
			<% end %>
		</tbody>

