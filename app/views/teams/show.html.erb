<table class="stats left">
	<thead>
		<tr class="sections">
			<th>Position Players</th>
		</tr>
		<tr>
			<th>Player</th>
			<th>Position(s)</th>
			<th>Bats/Throws</th>
			<th>AVG</th>
			<th>HR</th>
			<th>RBI</th>
			<th>SB</th>
		</tr>
	</thead>
	<tbody class="players">
			<% @position_players.each do |pp| %>
				<tr class="player">
					<td><%= link_to(pp.fname + ' ' + pp.lname, player_path(pp.player_id)) %></td>
					<td><%= pp.position %></td>
					<td><%= pp.bats %>/<%= pp.throws %></td>
					<td><%= number_with_precision(((pp.sum_hits.to_d / pp.sum_ab.to_d).to_d), :precision => 3).to_s.sub("0", "") %></td>
					<td><%= pp.sum_hr %></td>
					<td><%= pp.sum_rbi %></td>
					<td><%= pp.sum_sb %></td>
				</tr>
			<% end %>
	</tbody>
</table>
<table class="stats left">
	<thead>
		<tr class="sections">
			<th>Pitchers</th>
		</tr>
		<tr>
			<th>Player</th>
			<th>Throws</th>
			<th>ERA</th>
			<th>W</th>
			<th>L</th>
			<th>S</th>
			<th>SO</th>
		</tr>
	</thead>
	<tbody class="players">
			<% @pitchers.each do |pitcher| %>
				<tr class="player">
					<td><%= link_to(pitcher.fname + ' ' + pitcher.lname, player_path(pitcher.player_id)) %></td>
					<td><%= pitcher.throws %></td>
					<td><%= number_with_precision((((pitcher.sum_er.to_d / pitcher.sum_ip.to_d) * 9).to_d), :precision => 2) %></td>
					<td><%= pitcher.sum_win %></td>
					<td><%= pitcher.sum_loss %></td>
					<td><%= pitcher.sum_sv %></td>
					<td><%= pitcher.sum_so %></td>
				</tr>
			<% end %>
	</tbody>


<table class="stats left">
	<thead>
		<tr class="sections">
			<th>Coaches</th>
		</tr>
		<tr>
			<th>Coach</th>
			<th>Manager</th>
			<th>1B</th>
			<th>3B</th>
		</tr>
	</thead>
	<tbody class="coaches">
			<% @coaches.each do |c| %>
				<tr class="coach">
					<td><%= c.fullname %></td>
					<td><%= "X" if c.manager %></td>
					<td><%= "X" if c.first_base %></td>
					<td><%= "X" if c.third_base %></td>
				</tr>
			<% end %>
	</tbody>
</table>
