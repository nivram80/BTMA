<table class="stats home left">
	<thead>
		<tr class="sections">
			<th>Roster</th>
		</tr>
		<tr>
			<th>Player</th>
			<th>Position(s)</th>
			<th>Bats/Throws</th>
			<!--<th>AVG</th>
			<th>HR</th>
			<th>RBI</th>
			<th>SB</th>-->
		</tr>
	</thead>
	<tbody class="players">
			<% @players.each do |p| %>
				<tr class="player">
					<td><%= link_to(p.fname + ' ' + p.lname, player_path(p.id)) %></td>
					<td><%#= p.position %></td>
					<td><%= p.bats %>/<%= p.throws %></td>
				</tr>
			<% end %>
	</tbody>
</table>

<%= link_to "Add Player", :new_player, :class => "content_button left" %>
